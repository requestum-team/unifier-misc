{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "allowJs": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"]
}
